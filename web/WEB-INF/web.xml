<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- 设置web欢迎页面 -->
    <!-- 设置欢迎页面的时候，这个路径不需要以“/”开始。并且这个路径默认是从webapp的根下开始查找 -->
    <!-- 当我的文件名设置为index.html的时候，不需要在web.xml文件中进行配置欢迎页面 -->
    <welcome-file-list>
        <!-- 一个webapp是可以设置多个欢迎页面的 -->
        <!-- 注意：越靠上的优先级越高。找不到的继续向下找 -->
        <welcome-file>login.jsp</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- Servlet描述信息 -->
    <!-- 任何一个Servlet对应一个servlet-mapping -->
    <servlet>
        <servlet-name>FirstServlet</servlet-name>
        <!-- 这个位置必须是带有包名的全限定类名 -->
        <servlet-class>com.crystal.javaweb.servlet.FirstServlet</servlet-class>
        <!-- 在servlet标签中添加<load-on-startup>子标签，在该子标签中填写整数，越小的整数优先级越高 -->
        <!--<load-on-startup>1</load-on-startup>-->
    </servlet>
    <servlet>
        <servlet-name>ConfigServlet</servlet-name>
        <servlet-class>com.crystal.javaweb.servlet.ConfigServlet</servlet-class>
        <!-- 配置一个Servlet对象的初始化信息 -->
        <init-param>
            <param-name>ConfigName</param-name>
            <param-value>ConfigValue</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ContextServlet</servlet-name>
        <servlet-class>com.crystal.javaweb.servlet.ContextServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HttpsServlet</servlet-name>
        <servlet-class>com.crystal.javaweb.servlet.HttpsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HttpRequestServlet</servlet-name>
        <servlet-class>com.crystal.javaweb.servlet.HttpRequestServlet</servlet-class>
    </servlet>
    
    <!-- 以上两个方法是ServletContext对象的方法，这个方法获取以下的配置信息 -->
    <context-param>
        <!--注意：以上的配置信息属于应用级的配置信息，一般一个项目中共享的配置信息会放到以上的标签当中 -->
        <!-- 如果你的配置信息只是想给某一个servlet作为参考，那么你配置到servlet标签当中即可，使用ServletConfig对象来获取 -->
        <param-name>ContextName</param-name>
        <param-value>ContextValue</param-value>
    </context-param>

    <!-- Servlet映射信息 -->
    <servlet-mapping>
        <!-- 必须保持域上面的名称保持一致性 -->
        <servlet-name>FirstServlet</servlet-name>
        <!-- 这里需要路径，并且必须以"/"开始 -->
        <url-pattern>/first</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfigServlet</servlet-name>
        <url-pattern>/config</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContextServlet</servlet-name>
        <url-pattern>/application</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HttpsServlet</servlet-name>
        <url-pattern>/https</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HttpRequestServlet</servlet-name>
        <url-pattern>/https/request</url-pattern>
    </servlet-mapping>

</web-app>